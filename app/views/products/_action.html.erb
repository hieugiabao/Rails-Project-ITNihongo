<div class="mt-3 d-flex justify-content-start gap-3">
  <%= button_to edit_product_path(product), method: :get do %>
    <i class="bi bi-pencil" style="color:darkgray"></i>
    <span>Edit</span>
  <% end %>
  <button type="button" data-toggle="modal" data-target="#confirmModal">
    <i class="bi bi-trash" style="color:firebrick"></i>
    <span>Destroy</span>
  </button>

  <!-- Modal -->
  <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmModalLabel">Delete this present?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
           This action cannot be undone.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= button_to product, method: :delete, class: "btn btn-primary" do %>
            <span>Confirm</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
