<% content_for :title, "Sign up" %>

<div class="container w-50 px-5">
  <div class="text-center p-4"><h2>Sign up</h2></div>

  <!-- Render error -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
    <!-- Email input -->
    <div class="form-outline mb-2">
      <%= f.label :email, 'Email address *', class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", autofocus: true %>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-2">
      <%= f.label :password, 'Password *', class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password" %>
    </div>

    <!-- Password confirmation input -->
    <div class="form-outline mb-2">
      <%= f.label :password_confirmation, 'Confirm password *', class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation" %>
    </div>

    <!-- Name input -->
    <div class="form-outline mb-2">
      <%= f.label :name, 'Full name *', class: "form-label" %>
      <%= f.text_field :name, autocomplete: false, class: "form-control", id: "name" %>
    </div>

    <div class="form-outline">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <!-- Submit button -->
    <%= f.submit "Sign up", class: "btn btn-primary btn-block my-4 w-100" %>

    <!-- Register buttons -->
    <div class="text-left">
      <p>Already have an account? <%= link_to "Sign in", new_user_session_path %></p>
    </div>
  <% end %>
</div>
