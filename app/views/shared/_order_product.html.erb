<li>
  <%= link_to product do%>
    <% if product.cover.attached? %>
      <%= image_tag product.cover , size:"64x64" %>
    <% else %>
      <%= image_tag "no_image.png", size:"64x64" %>
    <%end%>
  <%end %>

  <strong>
    Name :
  </strong>
  <%= product.name %>
  ,<strong>
    Price :
  </strong>
  <%= product.price %> $

</li>
