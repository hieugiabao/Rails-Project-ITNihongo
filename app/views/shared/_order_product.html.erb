<li class="d-flex gap-2">
  <%= link_to product, data: {turbo: false} do%>
    <% if product.cover.attached? %>
      <%= image_tag product.cover , size:"64x64" %>
    <% else %>
      <%= image_tag "no_image.png", size:"64x64" %>
    <%end%>
  <%end %>

  <span class="d-flex flex-column me-1">
    <div>
      <strong>
        Name :
      </strong>
      <%= product.name %>
    </div>
    <div>
      <strong>
        Price :
      </strong>
      <%= number_to_currency(product.price, locale: :jp) %>
    </div>
    <% if product.sale_price? %>
      <div>
        <strong>
          Sale Price :
        </strong>
        <%= number_to_currency(product.sale_price, locale: :jp) %>
      </div>
    <% end %>
  </span>
</li>
